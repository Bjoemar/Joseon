<!DOCTYPE html>
<html>
<head>
	<title>정보</title>
	 <% include partials/header %>
	 <style type="text/css">
	 	table {
	 		width: 100%;
	 	}

	 	tr {
	 		text-align: center;
	 		font-size: 20px;
	 		/*color: #;*/
	 		border-bottom: 1px solid #ccc;
	 	}

	 	td,th {
	 		padding: 10px;
	 	}

	 	td {
	 		font-weight: 600;
	 		font-size: 15px;
	 	}

	 	.odd_col {
	 		background: #fefefe;
	 	}

	 	.even_col {
	 		background:#fafafa;
	 		/*#ffa40933*/


	 	}
	 </style>
</head>
<body>

  	<% include partials/navigation %>

     <div class="container" style="padding: 20px;">
     	<h2>고객 정보</h2>
     	<div class="information_holder" style="padding: 20px ;">
     		<table>
     			<tr style="border-bottom: 4px solid #ffa409;">
     				<th>업체명</th>
     				<th>연락처</th>
     				<th>이메일</th>
     			</tr>


     			<% var resLen = data.length;

     			 if (resLen > 0) {
     				for (i = 0; i < resLen; i++) { %> 

     					<% if (i % 2 == 0) { -%>

     						<tr class="odd_col">
     							<td><%=data[i].name%></td>
     							<td><%=data[i].cellphone%></td>
     							<td><%=data[i].email%></td>
     						</tr>

     					<% } else { -%>

     						<tr class="even_col">
     							<td><%=data[i].name%></td>
     							<td><%=data[i].cellphone%></td>
     							<td><%=data[i].email%></td>
     						</tr>

     					<% } -%>

     			<% } } %>
 


     		</table>
     	</div>
     </div>
    
  	<% include partials/footer %>
</body>

<script type="text/javascript" src="./assets/js/websocket.js"></script>
<script type="text/javascript" src="./assets/js/script.js"></script>
<script type="text/javascript" src="./assets/js/emailValidate.js"></script>
</html>