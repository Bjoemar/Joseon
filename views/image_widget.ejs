<!-- Latest compiled JavaScript -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

<script src="/socket.io/socket.io.js"></script>

<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">





	
	<div class="container">
			
		<form action="saveWid_image" method="POST" enctype="multipart/form-data" style="padding-bottom: 20px; border-bottom: 3px solid #333;">
			<div class="row">
			
				<div style="text-align: center;" class="col-md-12 col-sm-12">
					<input type="file" name="img2" class="form-control" style="width: 100%;">
				</div>
				
				<button class="btn btn-dark mt-2" style="width: 100%;">Save</button>
			</div>
		</form>
	</div>

	<div class="container">
		<% if (data) { -%>
			<% if (data.length > 0) { -%>
				
				<!-- <div class="container"> -->
					<div class="row">
						<% for (var i = 0; i < data.length; i++) { -%>
							<div class="col-ml-6 col-xl-6 col-sm-6">
								<img src="<%=data[i]['image2']%>" style="width: 100%; height: 400px; object-fit: cover;">
								<button class="btn btn-danger mt-2 wid_delete" value="<%=data[i]['_id']%>" style="width: 100%;">삭제</button>
							</div>
						<% } -%>
					</div>					
				<!-- </div> -->

			<% } -%>
		<% } -%>
			
	
	</div>

<script type="text/javascript">
	var socket = io();
	$('.wid_delete').click(function(){
		var data_id = $(this).val();
		$(this).parent().remove();
		socket.emit('delete_wid_img',{data_id : data_id});
	})

</script>