<% include partials/header %>

<!-- <div class="container"> -->
<style type="text/css">
	img { 
		width: 100%;
		height: 450px;
	 }
</style>
	<% if (typeof data != 'undefined') { -%>
			
		<% var resLen = data.length;
			if (resLen > 0) { %>
				
					<form action="saveWid_image" method="POST" enctype="multipart/form-data">
						<div class="row">
									
								<div style="text-align: center;" class="col-md-4 col-sm-4">
									<% if (data[0]['image1']) { -%>
										<img src="<%=data[0]['image1'] %>">
									<% } else { -%>
										<img src="assets/images/22.gif">
									<% } -%>
									
									<input type="file" name="img1" class="form-control" style="width: 100%;">
									<input type="text" name="link1" class="form-control">
								</div>
								<div style="text-align: center;" class="col-md-4 col-sm-4">
									<% if (data[0]['image2']) { -%>
										<img src="<%=data[0]['image2']%>">
									<% } else { -%>
										<img src="assets/images/22.gif">
									<% } -%>
									<input type="file" name="img2" class="form-control" style="width: 100%;">
									<input type="text" name="link2" class="form-control">
								</div>
								<div style="text-align: center;" class="col-md-4 col-sm-4">
									<% if (data[0]['image3']) { -%>
										<img src="<%=data[0]['image3']%>">
									<% } else { -%>
										<img src="assets/images/22.gif">
									<% } -%>
									<input type="file" name="img3" class="form-control" style="width: 100%;">
									<input type="text" name="link3" class="form-control">
								</div>
								<button class="btn btn-dark" style="width: 100%;">Save</button>
						</div>
					</form>

			<% } else { %>

					<form action="saveWid_image" method="POST" enctype="multipart/form-data">
						<div class="row">
							<div style="text-align: center;" class="col-md-4 col-sm-4">
								<img src="assets/images/22.gif">
								<input type="file" name="img1" class="form-control" style="width: 100%;">
							</div>
							<div style="text-align: center;" class="col-md-4 col-sm-4">
								<img src="assets/images/22.gif">
								<input type="file" name="img2" class="form-control" style="width: 100%;">
							</div>
							<div style="text-align: center;" class="col-md-4 col-sm-4">
								<img src="assets/images/22.gif">
								<input type="file" name="img3" class="form-control" style="width: 100%;">
							</div>
							<button class="btn btn-dark" style="width: 100%;">Save</button>
						</div>
					</form>

			<% } -%>
	<% } -%>


