<!DOCTYPE html>
<html>
<head>
     <title>정보</title>
      <% include mobile_partials/header %>
      <style>
           table td ,th{
               text-align: center;
               font-size: 8px;
               padding-bottom: 5px!important;
               padding-top: 5px!important;
           }
      </style>
</head>
<body>
     <% include mobile_partials/navigation %>



     <div class="container" style="padding: 3px;">
          
          <div class="information_holder" style="padding: 20px ;">
               <h5 class="ml-3">회원 목록</h5>
               <table>
                    <tr style="border-bottom: 4px solid #ffa409;">
                         <th style="width: 20%;">이름</th>
                         <th style="width: 20%;">ID</th>
                         <th style="width: 20%;">암호</th>
                         <th style="width: 20%;">연락처</th>
                         <th style="width: 20%;">이메일</th>
                    </tr>


                    <% var resLen = data.length;

                     if (resLen > 0) {
                         for (i = 0; i < resLen; i++) { %> 

                              <% if (i % 2 == 0) { -%>

                                   <tr class="odd_col" >
                                        <td><%=data[i].name%></td>
                                        <td><%=data[i].user_id%></td>
                                        <td><%=data[i].password%></td>
                                        <td><%=data[i].cellphone%></td>
                                        <td><%=data[i].email%></td>
                                   </tr>

                              <% } else { -%>

                                   <tr class="even_col" >
                                        <td><%=data[i].name%></td>
                                        <td><%=data[i].user_id%></td>
                                        <td><%=data[i].password%></td>
                                        <td><%=data[i].cellphone%></td>
                                        <td><%=data[i].email%></td>
                                   </tr>

                              <% } -%>

                    <% } } %>
     


               </table>
          </div>
     </div>

  
     <% include mobile_partials/footer %>
</body>

<script type="text/javascript" src="./assets/js/websocket.js"></script>
<script type="text/javascript" src="./assets/js/script.js"></script>
<script type="text/javascript" src="./assets/js/emailValidate.js"></script>
</html>